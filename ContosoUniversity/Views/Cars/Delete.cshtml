@model ContosoUniversity.DAL.SalesModel.Car
@{
	ViewBag.Title = "Delete";
}

<ul class="breadcrumb">
	<li><a href="\">Tables</a> <span class="divider">/</span></li>
	<li>@Html.ActionLink("Cars", "Index", "Cars") <span class="divider">/</span></li>
	<li class="active">Delete</li>
</ul>
<div class="row">
	<div class="span4">
		<table class="table table-bordered table-striped table-condensed table-hover pull-left">
			<tr>
				<td>@Html.LabelFor(x => x.ManufactureYear)</td>
				<td>@Model.ManufactureYear</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(x => x.BrandId)</td>
				<td>@Model.BrandId</td>
			</tr>
			<tr>
				<td>@Html.LabelFor(x => x.ModelName)</td>
				<td>@Model.ModelName</td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="span4">
@using (Html.BeginForm()) {
		<input type="submit" value="Delete" class="btn btn-danger" />
		@Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
}
	</div>
</div>
